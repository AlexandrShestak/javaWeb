    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>com.shestakam.user.controller.UserController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registrationServlet</servlet-name>
        <servlet-class>com.shestakam.user.authorization.RegistrationController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registrationServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>newsServlet</servlet-name>
        <servlet-class>com.shestakam.news.controller.NewsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>newsServlet</servlet-name>
        <url-pattern>/news</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>languageServlet</servlet-name>
        <servlet-class>com.shestakam.language.LanguageController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>languageServlet</servlet-name>
        <url-pattern>/language</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>commentsServlet</servlet-name>
        <servlet-class>com.shestakam.news.comments.controller.CommentsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>commentsServlet</servlet-name>
        <url-pattern>/comments</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>tagsServlet</servlet-name>
        <servlet-class>com.shestakam.news.tags.controller.TagController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>tagsServlet</servlet-name>
        <url-pattern>/tags</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>com.shestakam.user.authorization.AuthorizationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <!-- <url-pattern></url-pattern>-->
        <servlet-name>userServlet</servlet-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <servlet-name>newsServlet</servlet-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <servlet-name>commentsServlet</servlet-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <servlet-name>tagsServlet</servlet-name>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>dispatcherServlet</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcherServlet</servlet-name>
        <url-pattern>/authorization</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>dispatcherServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>dispatcherServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/daoContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <listener>
        <listener-class>
            org.springframework.web.context.request.RequestContextListener
        </listener-class>
    </listener>
</web-app>
