        <servlet-name>authorizationServlet</servlet-name>
        <servlet-class>com.shestakam.user.authorization.AuthorizationController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>authorizationServlet</servlet-name>
        <url-pattern>/authorization</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>authorizationServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

